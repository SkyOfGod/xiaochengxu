<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cailanzi.mapper.ProductStatusMapper">

    <delete id="truncateProductStatus">
        TRUNCATE TABLE product_status
    </delete>

    <update id="updateStoreAndStatus" parameterType="com.cailanzi.pojo.entities.ProductStatus">
        UPDATE product_status
        <set>
            <if test="createTime!=null">
                create_time=#{createTime},
            </if>
            <if test="usableQty!=null">
                usable_qty=#{usableQty},
            </if>
            <if test="vendibility!=null">
                vendibility=#{vendibility},
            </if>
        </set>
        WHERE station_no=#{stationNo} AND sku_id=#{skuId}
    </update>
</mapper>