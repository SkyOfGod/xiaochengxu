              <image class="order_product_img" src="/images/search_no.png"></image>
              <view class="order_product_data">
                <view class="order_product_data_name">产品名称：{{product.skuName}}</view>
                <view class="sp_tit">
                  数量：×<text class='sp_jg'>{{product.skuCount}}</text>
                  <text>单价：¥{{product.skuStorePrice/100}}</text>
                </view>
                状态：<text class="{{product.status==2 ? 'sp_jg' : ''}}">{{product.status==2 ? '缺货' : '有货'}}</text>
              </view>
            </view>
        </view>
        <view class="c_t61"></view>
      </view>
    </view>
  </swiper-item>

  <!-- 退款/售后 -->
  <swiper-item>
    <view class="search_no" wx:if="{{!orders5}}">
        <view class="font_14"><image class="scimg" src="/images/search_no.png"></image></view>
        <text>没有可用订单/(ㄒoㄒ)/~~</text>
    </view>

    <view class="shop df" wx:for="{{orders5}}">
        <image class="sh_slt" src="{{item.photo_x}}"></image>
        <view class="df_1">            
            <view class="sp_text">
                <navigator url="../index/detail?productId={{item.pid}}" hover-class="changestyle">
                    <view class="sp_tit ovh1">{{item.name}}</view>
                </navigator>
                <view class="order_product_data_name">单价：¥ {{item.price_yh}} 数量：×{{item.product_num}} 产品：×{{item.pro_count}}</view>
                <view class="sp_jg">¥：{{item.price}}</view>
                <view class="font_12 red fl_r">{{item.desc}}</view>
                <!--<navigator url="../order/detail?orderId={{item.id}}" class="font_12 red fl_r mr_5">订单详情</navigator>-->
            </view>
        </view>
    </view>
  </swiper-item>

</swiper>
